<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="253dp"
        android:layout_marginStart="253dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="172dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/gym" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tyger GYM"
                android:id="@+id/textView"
                android:textColor="#d2211099"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_gravity="right" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:weightSum="1">

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="122dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/info"
                android:layout_marginLeft="20dp"
                android:onClick="lanzarInfo"
                android:clickable="true" />

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="122dp"
                android:id="@+id/imageButton"
                android:layout_marginLeft="50dp"
                android:background="@drawable/micuenta"
                android:layout_marginRight="50dp"
                android:onClick="lanzarCuenta"
                android:clickable="true"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="INFORMACION"
                android:layout_marginLeft="20dp"
                android:editable="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.52"
                android:text="MI CUENTA"
                android:editable="false"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="127dp"
            android:weightSum="1">

            <ImageButton
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:layout_marginLeft="90dp"
                android:background="@drawable/ejercicio"
                android:clickable="true"
                android:onClick="lanzarEjercicio" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:id="@+id/editText3"
                android:text="EJERCICIOS"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:editable="false"/>
        </TableRow>

    </LinearLayout>

</RelativeLayout>
