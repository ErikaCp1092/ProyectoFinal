
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erika.proyectofinal.Info"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INFORMACIÓN"
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:textColor="#d2211099"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"

        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIRECCIÓN:"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:editable="false"/>

        <TextView
            android:layout_width="209dp"
            android:layout_height="103dp"
            android:text="Periférico de la Juventud 6112-4 Col. haciendas 31217 Plaza carrizales"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="bottom|fill_vertical"
            android:editable="false"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TELEFONO: 111-11-11-11"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:editable="false"/>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="182dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:text="MISIÓN: Crear programas personalizados y planes de dietas donde el cliente vea resultados transformadores."
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:editable="false"/>
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VER MAPA"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="mapa" />


</LinearLayout>
